# Configuración de Airtable
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=Solicitudes_Compras

# URL de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Webhook URL para notificaciones
NEXT_PUBLIC_WEBHOOK_URL=https://your-webhook-url.com/webhook/your-webhook-id

# Configuración de desarrollo
NODE_ENV=development

# Configuración de archivos
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.gif

# Configuración de notificaciones (opcional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASS=your_email_password
NOTIFICATION_EMAIL=admin@sirius.com
